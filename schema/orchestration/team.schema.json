{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/plexusone/multi-agent-spec/main/schema/orchestration/team.schema.json",
  "$ref": "#/$defs/Team",
  "$defs": {
    "Port": {
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "$ref": "#/$defs/PortType"
        },
        "description": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        },
        "from": {
          "type": "string"
        },
        "schema": true,
        "default": true
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name"
      ]
    },
    "PortType": {
      "type": "string",
      "enum": [
        "string",
        "number",
        "boolean",
        "object",
        "array",
        "file"
      ],
      "description": "Data type of a port"
    },
    "Step": {
      "properties": {
        "name": {
          "type": "string"
        },
        "agent": {
          "type": "string"
        },
        "depends_on": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "inputs": {
          "items": {
            "$ref": "#/$defs/Port"
          },
          "type": "array"
        },
        "outputs": {
          "items": {
            "$ref": "#/$defs/Port"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name",
        "agent"
      ]
    },
    "Team": {
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "agents": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "orchestrator": {
          "type": "string"
        },
        "workflow": {
          "$ref": "#/$defs/Workflow"
        },
        "context": {
          "type": "string"
        },
        "collaboration": {
          "$ref": "#/$defs/CollaborationConfig",
          "description": "Collaboration configuration for self-directed workflows"
        },
        "self_claim": {
          "type": "boolean",
          "default": false,
          "description": "Allow agents to self-claim tasks from shared queue (swarm workflow)"
        },
        "plan_approval": {
          "type": "boolean",
          "default": false,
          "description": "Require plan approval before implementation (crew workflow)"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name",
        "version",
        "agents"
      ]
    },
    "CollaborationConfig": {
      "type": "object",
      "description": "Configuration for how agents interact in self-directed workflows",
      "properties": {
        "lead": {
          "type": "string",
          "description": "Lead agent name (required for 'crew' workflow)"
        },
        "specialists": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Non-delegating specialist agent names"
        },
        "task_queue": {
          "type": "boolean",
          "default": false,
          "description": "Enable shared task queue for self-claiming (for 'swarm' workflow)"
        },
        "consensus": {
          "$ref": "#/$defs/ConsensusRules"
        },
        "channels": {
          "type": "array",
          "items": { "$ref": "#/$defs/Channel" },
          "description": "Communication channels between agents"
        }
      },
      "additionalProperties": false
    },
    "ConsensusRules": {
      "type": "object",
      "description": "Rules for how agents reach agreement (council workflow)",
      "properties": {
        "required_agreement": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "default": 0.5,
          "description": "Fraction of agents that must agree (e.g., 0.66 for 2/3 majority)"
        },
        "max_rounds": {
          "type": "integer",
          "minimum": 1,
          "default": 3,
          "description": "Maximum debate rounds before forcing decision"
        },
        "tie_breaker": {
          "type": "string",
          "description": "Agent name to break ties, or 'lead' for lead agent"
        }
      },
      "additionalProperties": false
    },
    "Channel": {
      "type": "object",
      "description": "Communication channel between agents",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Channel identifier"
        },
        "type": {
          "$ref": "#/$defs/ChannelType"
        },
        "participants": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Agent names or '*' for all agents"
        }
      },
      "additionalProperties": false
    },
    "ChannelType": {
      "type": "string",
      "enum": ["direct", "broadcast", "pub-sub"],
      "description": "Communication channel type"
    },
    "Workflow": {
      "properties": {
        "type": {
          "$ref": "#/$defs/WorkflowType"
        },
        "steps": {
          "items": {
            "$ref": "#/$defs/Step"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "WorkflowType": {
      "type": "string",
      "enum": [
        "chain",
        "scatter",
        "graph",
        "crew",
        "swarm",
        "council"
      ],
      "description": "Workflow execution pattern. Deterministic (schema controls): chain, scatter, graph. Self-directed (agents control): crew, swarm, council.",
      "default": "graph"
    }
  },
  "title": "Multi-Agent Spec - Team Definition",
  "description": "Schema for defining a team of AI agents with orchestration"
}