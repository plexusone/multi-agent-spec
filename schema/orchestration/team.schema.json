{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/agentplexus/multi-agent-spec/main/schema/orchestration/team.schema.json",
  "$ref": "#/$defs/Team",
  "$defs": {
    "Port": {
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "$ref": "#/$defs/PortType"
        },
        "description": {
          "type": "string"
        },
        "required": {
          "type": "boolean"
        },
        "from": {
          "type": "string"
        },
        "schema": true,
        "default": true
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name"
      ]
    },
    "PortType": {
      "type": "string",
      "enum": [
        "string",
        "number",
        "boolean",
        "object",
        "array",
        "file"
      ],
      "description": "Data type of a port"
    },
    "Step": {
      "properties": {
        "name": {
          "type": "string"
        },
        "agent": {
          "type": "string"
        },
        "depends_on": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "inputs": {
          "items": {
            "$ref": "#/$defs/Port"
          },
          "type": "array"
        },
        "outputs": {
          "items": {
            "$ref": "#/$defs/Port"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name",
        "agent"
      ]
    },
    "Team": {
      "properties": {
        "name": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "agents": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "orchestrator": {
          "type": "string"
        },
        "workflow": {
          "$ref": "#/$defs/Workflow"
        },
        "context": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name",
        "version",
        "agents"
      ]
    },
    "Workflow": {
      "properties": {
        "type": {
          "$ref": "#/$defs/WorkflowType"
        },
        "steps": {
          "items": {
            "$ref": "#/$defs/Step"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "WorkflowType": {
      "type": "string",
      "enum": [
        "sequential",
        "parallel",
        "dag",
        "orchestrated"
      ],
      "description": "Workflow execution pattern",
      "default": "orchestrated"
    }
  },
  "title": "Multi-Agent Spec - Team Definition",
  "description": "Schema for defining a team of AI agents with orchestration"
}